<Window x:Class="DepartExercices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartExercices"
        mc:Ignorable="d"
        Title="Carnet adresse" 
        Height="350" 
        Width="600"
        ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0">
            <WrapPanel Margin="5">
                <TextBlock Text="Nom:"
                           Width="70"/>
                <TextBox Name="Nom"
                         Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="5">
                <TextBlock Text="Prénom:"
                           Width="70"/>
                <TextBox Name="Prenom"
                         Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="5">
                <TextBlock Text="No. Civique:"
                           Width="70"/>
                <TextBox Name="NoCivique"
                         Width="150"/>
            </WrapPanel>

            <WrapPanel Margin="5">
                <TextBlock Text="Rue:"
                           Width="70"/>
                <TextBox Name="Rue"
                         Width="150"/>
            </WrapPanel>

            <StackPanel>
                <Button Name="BoutonAjouter"
                        Content="Ajouter"
                        HorizontalAlignment="Center"
                        Width="150"
                        Margin="0, 10, 0, 0"/>
                <Button Name="BoutonRetirer"
                        Content="Retirer"
                        HorizontalAlignment="Center"
                        Width="150"
                        Margin="0, 10, 0, 0"/>
                <Button Name="BoutonNouveau"
                        Content="Nouveau"
                        HorizontalAlignment="Center"
                        Width="150"
                        Margin="0, 10, 0, 0"/>
                <Button Name="BoutonAnnuler"
                        Content="Annuler"
                        HorizontalAlignment="Center"
                        Width="150"
                        Margin="0, 10, 0, 0"/>
            </StackPanel>
        </StackPanel>

        <DockPanel Grid.Row="0"
                   Grid.Column="1">
            <Border DockPanel.Dock="Top"
                    Margin="0,20,0,0"
                    Width="150"
                    Height="150"
                    BorderThickness="2"
                    BorderBrush="Black">

                <Image Source="assets/NoImage.png" 
                       VerticalAlignment="Center"/>
            </Border>

            <Button Name="BoutonChangerPhoto"
                    Content="Changer photo"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="150"
                    Margin="0, 10, 0, 0"
                    DockPanel.Dock="Bottom"/>

        </DockPanel>

        <!-- Boutons du bas -->
        <Button Name="BoutonPrecedent" 
                Content="Précédent"
                Grid.Row="1"
                Grid.Column="0"
                Height="Auto"
                Width="150"
                Margin="5"/>

        <Button Name="BoutonProchain"
                Content="Prochain"
                Grid.Row="1"
                Grid.Column="1"
                Height="Auto"
                Width="150"
                Margin="5"/>
    </Grid>
</Window>
